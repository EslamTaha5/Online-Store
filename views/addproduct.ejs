<%- include('parts/top.ejs') %>
<%- include('parts/nav.ejs') %>
<div class = "container d-flex justify-content-center  mt-5  align-self-center">
    <div class  = "w-75 d-flex flex-column justify-content-center rounded-4 border border-black shadow p-3 mb-5">
        <h4 style = "margin: auto;">Add Product</h2>
        <form action = "/admin/add" method = "post" enctype="multipart/form-data" class = "productDetails d-flex mt-3 align-items-center">
            <div class = "productImage w-25 mx-1 h-75 d-flex flex-column justify-content-center align-items-center">
                <i class="bi bi-file-earmark-image fs-1"></i>
                <input  
                    type="file"
                    class="form-control"
                    name = "image"
                    placeholder="Image"
                />
            </div>
            <div class = "productDetails w-75">
                <input type = "text" class = "form-control" name = "name" placeholder="Product Name">
                <input type = "number" class = "form-control mt-3" name = "price" placeholder="Product price">
                <textarea 
                    type="text"
                    class="form-control mt-3"
                    name = "description"
                    placeholder="Description"
               ></textarea>
               <select name='category' class="form-control mt-3">
                    <option value="clothes">Clothes</option>
                    <option value="phones">Phones</option>
                    <option value="computers">Computers</option>
                    <option value="computers">Computers Accessories</option>
                </select>
                <input type="submit" class="add-button mt-3" value="Add Product">                                          
            </div>
        </form>
    </div>
</div>
<%- include('parts/bot.ejs') %>